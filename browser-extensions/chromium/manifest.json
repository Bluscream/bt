{
    "name": "Browser Tamer",
    "version": "1.4",
    "manifest_version": 3,
    "description": "Integrates Browser Tamer with Chromium based browsers (like Google Chrome, Microsoft Edge, Brave, etc.).",
    "icons": {
        "16":  "icons/icon16x16.png",
        "48":  "icons/icon48x48.png",
        "128": "icons/icon128x128.png",
        "192": "icons/icon192x192.png",
        "256": "icons/icon256x256.png"
    },
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open with Browser Tamer"
    }
}
